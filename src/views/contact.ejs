<%- include('includes/head'); %>
  <%- include('includes/nav'); %>
  <div class="container-fluid text-center py-3">

    <%- include('includes/messages'); %>

    <h1>Contatos</h1>
    <!-- <p class="lead">Ainda não há contatos.</p> -->


    <div class="container">
      <a style="width: 200px;" class="d-flex justify-content-start btn btn-primary my-3" href="/contact/new">Adicionar novo contato</a>
      <table class="table">
        <% if(contacts.length > 0) { %>
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Telefone</th>
            <th scope="col">E-mail</th>
            <th scope="col">Editar</th>
            <th scope="col">Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.tel %></td>
              <td><%= contact.email %></td>
              <td><a href="/contact/edit/<%= contact._id %>">
                <i class="fa-solid fa-pen-to-square"></i>
              </a></td>
              <td><a class="text-danger link-underline-dark" href="/contact/delete/<%= contact._id %>">
                <i class="fa-solid fa-trash"></i>
              </a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else {%>
        <p class="text-start lead my-3">Não há contatos na sua agenda!</p>
      <% } %>
    </div>
  </div>
<%- include('includes/footer'); %>